# ========================================
# ðŸš€ NEBENGJEK ENVIRONMENT TEMPLATE
# ========================================
# Copy this file to .env and fill in your actual values
# This file is safe to commit to Git (no secrets)

# Application Environment
NODE_ENV=development

# Service Ports
USER_PORT=3001
BOOKING_PORT=3002
TRACKING_PORT=3003
NOTIFICATION_PORT=3004
PAYMENT_PORT=3005
MATCHING_PORT=3006

# WebSocket Ports
TRACKING_WS_PORT=3060
NOTIFICATION_WS_PORT=3050

#TCP Ports
MATCHING_TCP_PORT=8006
NOTIFICATION_TCP_PORT=8004

# Database Configuration
POSTGRES_HOST='0.0.0.0'
POSTGRES_USER=your_db_username
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_database_name
POSTGRES_PORT=5432
POSTGRES_SCHEMA='public'

# Database Connection URL
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=${POSTGRES_SCHEMA}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Secrets (Generate strong random secrets!)
JWT_ACCESS_SECRET=generate_random_32_char_secret
JWT_REFRESH_SECRET=generate_random_32_char_secret
JWT_ACCESS_EXPIRES_IN=15m # The value "15m" means the token will expire in 15 minutes.
JWT_REFRESH_EXPIRES_IN=7d # The value "7d" means the token will expire in 7 days.

# Service Discovery
TRACKING_SERVICE_HOST=tracking-service
NOTIFICATION_SERVICE_HOST=notification-service
MATCHING_SERVICE_HOST=matching-service

# Development Tools Ports
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# Docker Network
DOCKER_SUBNET=172.20.0.0/16

# for local testing
GATEWAY_SECRET_KEY=your_gateway_secret_key